{
  "compilerOptions": {
    "target": "ES5",       
    "module": "CommonJS",                         
    "outDir": "./dist",
    "rootDir": "./src" ,
    "strict": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,  
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true   
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
